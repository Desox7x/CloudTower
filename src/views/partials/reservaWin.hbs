<link rel="stylesheet" href="css/jquery-ui.css">
<script src="script/jquery-1.12.4.js"></script>
<script src="script/jquery.ui.js"></script>

<div class="modal fade" id="reservaModal{{@index}}" tabindex="-1" role="dialog" aria-labelledby="newProyectTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-center" role="document">
        <div class="modal-content">
            <div class="modal-header text-white" style="background-color: #1bb2fe;">
                <h5 class="modal-title" id="exampleModalLongTitle">Reserva este inmueble</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/reservar/{{inmo.idInm}}/add" method="POST">
                    <div class="form-group">
                        <h5>Programe el día</h5>
                        <input type="date" name="fecha" id="fecha" placeholder="YYYY-MM-DD" />
                        <script type="text/javascript">
                            $(document).ready(function() {
                                $("#fecha").datepicker();
                            });
                        </script>
                    </div>
                    <hr>
                    <div class="form-group">
                        <h5>Programe la hora</h5>
                        <label for="tiempo">Hora</label>
                        <select name="tiempo" class="custom-select" required>

                            <option value="9:00 am">9:00 am</option>
                            <option value="9:30 am">9:30 am</option>
                            <option value="10:00 am">10:00 am</option>
                            <option value="10:30 am">10:30 am</option>
                            <option value="11:00 am">11:00 am</option>
                            <option value="11:30 am">11:30 am</option>
                            <option value="12:00 pm">12:00 pm</option>
                            <option value="12:30 pm">12:30 pm</option>
                            <option value="1:00 pm">1:00 pm</option>
                            <option value="1:30 pm">1:30 pm</option>
                            <option value="2:00 pm">2:00 pm</option>
                            <option value="2:30 pm">2:30 pm</option>
                            <option value="3:00 pm">3:00 pm</option>
                            <option value="3:30 pm">3:30 pm</option>
                            <option value="4:00 pm">4:00 pm</option>
                            <option value="4:30 pm">4:30 pm</option>
                            <option value="5:00 pm">5:00 pm</option>

                        </select>
                    </div>
                    <hr>
                    <div class="form-group">
                        <h5>Ubicación</h5>
                        <input type="text" value="{{inmo.ubic}}" disabled>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn text-white"
                            style="background-color: #1bb2fe; border-color: #1eb2fc;">Reservar</button>
                    </div>

                </form>
            </div>
        </div>
    </div>

</div>
