 {{#each inmuebles}}
  <div class="modal fade" id="infomodal{{@index}}" tabindex="-1" role="dialog" aria-labelledby="ClienteModalTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
      
      <div class="modal-content">
        <div class="modal-header text-white" style="background-color: #65cafe;">

          <h5 class="modal-title" id="exampleModalLongTitle">Información {{nombre}}</h5>

          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div class="modal-body">
          <div class="row">

            <div class="col-md-6">

              <li><strong>Descripción</strong></li>
              <h6 class="text-justified">{{descr}}</h6>
              <li><strong>Localización</strong></li>
              <h6 class="text-justified">{{ubic}}, {{municipio}}</h6>
              <li><strong>Tipo de inmueble</strong></li>
              <h6 class="text-justified">{{tipoInm}}</h6>
              
              <b>Datos</b>
              <li>{{hab}} Habitación/es</li>
              <li>{{bano}} Baño/s</li>
              <li>{{metro}} m²</li>
              <br>
              <h6 class="text-justified"><strong>Precio: </strong>{{precio}}${{moneda}}</h6>

              <form action="/propiedad/{{idInm}}">
              <button class="btn btn-success btn-sm">Contacto</button>
              </form>
            </div>

            <div class="col-md-6 ml-auto">
              <img src="/img/{{img}}" alt="" class="w-100 h-100 img-thumbnail">
            </div>
          </div>
        </div>

      </div>

    </div>
  </div>
  {{/each}}