<div class="container-fluid">
    <div class="row">
        <div id="carouselExampleSlidesOnly" class="carousel slide" 
            data-ride="carousel" data-interval="5000">
            <div class="carousel-inner" id="carrusel">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="./img/building.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="./img/building4.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="./img/treebuilding.jpg" alt="Third slide">
                </div>
            </div>
        </div>
    </div>
</div>
