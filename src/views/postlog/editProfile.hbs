<section style="background: url('../img/stock2.jpg') no-repeat fixed center; background-size: cover;">
    <div class="container p-4 bg-light">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card text-center rounded-circle">
                <div class="card-header bg-light ">
                    <img src="/uploads/{{data.idImg}}" class="rounded-circle img-thumbnail w-100 h-100" alt="">
                    <h3>{{data.fullname}}</h3>
                </div>
            </div>
            <br>
            <form action="/upload" method="POST" enctype="multipart/form-data">
                <input type="file" name="image">              
                <div class="form-row justify-content-center">
                    <button type="btn btn-success">
                        Subir
                    </button>
                </div>
            </form>
            <br>
        </div>
    </div>

    <hr class="sidebar-divider">

    <form action="/updateuser" method="POST">
        
        <div class="form-group row justify-content-center">
            <h5 class="col-md-3"><i class="fas fa-user fa-fw"></i> Nombre:</h5>
            <div class="col-md-5">
                <input type="text" name="fullname" value="{{user.fullname}}" placeholder="Nombre completo"
                    class="form-control">
            </div>
        </div>
        <hr class="sidebar-divider" width="70%">

        <div class="form-group row justify-content-center">
            <h5 class="col-md-3"><i class="far fa-envelope fa-fw"></i> Correo:</h5>
            <div class="col-md-5">
                <h5>{{data.correo}}</h5>
            </div>
        </div>
        <hr class="sidebar-divider" width="70%">

        <div class="form-group row justify-content-center">
            <h5 class="col-md-3"><i class="fas fa-mobile-alt fa-fw"></i> Teléfono:</h5>
            <div class="col-md-5">
                <input type="tel" name="telefono" value="{{user.telefono}}" placeholder="Número de Teléfono"
                    class="form-control" required pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" aria-describedby="ayudaTelefono">
                    <small id="ayudaTelefono" class="form-text text-muted">
                        Formato: XXX-XXX-XXXX
                    </small>
            </div>
        </div>
        <hr class="sidebar-divider" width="70%">

        <div class="form-group row justify-content-center">
            <h5 class="col-md-3"><i class="far fa-map fa-fw"></i> Dirección:</h5>
            <div class="col-md-5">
                <input type="text" name="direccion" value="{{user.direccion}}" placeholder="Escriba una versión reducida de su dirección"
                    class="form-control">
            </div>
        </div>
        
        <hr class="sidebar-divider">

        <div class="form-group row justify-content-center">
            <h5 class="col-md-3"><i class="fa fa-pencil fa-fw"></i> Descripción:</h5>
            <div class="col-md-5">
                <input type="text" name="descripcion" value="{{user.descripcion}}" placeholder="Escriba algo que desea que otros sepan de usted"
                    class="form-control">
            </div>
        </div>
        <hr class="sidebar-divider" width="70%">

        <div class="form-group row justify-content-center">
            <h5 class="col-md-3"><i class="fa fa-id-badge fa-fw"></i> Lugar de empleo:</h5>
            <div class="col-md-5">
                <input type="text" name="Empleo" value="{{user.Empleo}}" placeholder="Escriba su situación laboral actual"
                    class="form-control">
            </div>
        </div>

        <br>
        
        <div class="row justify-content-center">
            <div class="form-group">
                <button class="btn btn-primary" style="background-color: #1bb2fe; border-color: #1eb2fc;">Editar
                    info</button>
            </div>
        </div>
    </form>
</section>



