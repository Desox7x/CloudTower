<title>Perfil</title>

<!-- Custom fonts for this template-->
<link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

<!-- Custom styles for this template-->
<link href="/css/sb-admin-2.min.css" rel="stylesheet">

<style>
    .card-title,
    .card-text {

        background-color: rgba(0, 0, 0, 0.5);
        color: white;


    }
</style>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav sidebar sidebar-dark accordion" id="accordionSidebar" style="background-color: #50aafe;">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center text-white">
                <div>
                    <img class="img-profile rounded-circle" src="/uploads/{{ data.idImg }}" width="50" height="50">
                </div>
                <div class="sidebar-brand-text mx-3">{{data.fullname}} </div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Interfaz
            </div>

            <!-- Nav Item - Pages Collapse Menu -->


            <!-- Nav Item - Charts -->
            <li class="nav-item">
                <a class="nav-link" href="/search">
                    <i class="fas fa-search"></i>
                    <span>Buscador</span></a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/dashboardin">
                    <i class="fas fa-chart-area"></i>
                    <span>Tablero</span></a>
            </li>


            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->


        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div class="p-4" id="content">

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <div class="row">

                        <!-- Area Chart -->
                        <div class="col-xl-12 col-lg-8 ">
                            <div class="card shadow mb-4">
                                <!-- Card Header - Dropdown -->
                                <div
                                    class="card-header py-8 d-flex flex-row align-items-center justify-content-between" style="background-color: #1bb2fe;">
                                    <h6 class="m-0 font-weight-bold text-white">Perfil de Inmobiliaria</h6>

                                </div>
                                <!-- Card Body -->
                                <div class="card-body">
                                    <div class="chart-area" style="height: 8rem;">
                                        <ul>
                                            <h4>{{data.direccion}}</h4>
                                        </ul>
                                        <ul>
                                            <h5>{{data.telefono}}</h5>
                                        </ul>
                                        <ul>
                                            <h5>{{data.correo}}</h5>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        {{#each inmuebles}}
                        <div class="col-md-3">
                            <div class="card text-center mx-auto">
                                <div class="card-header">
                                    <a href="/inmueble/{{idInm}}">
                                        <img src="/img/{{img}}" alt="" class="img-thumbnail">
                                    </a>
                                </div>
                                <div class="card-body">
                                    <h5>{{nombre}}</h5>
                                    <button type="button" class="btn btn-primary" style="background-color: #1bb2fe; border-color: #1eb2fc;"
                                        data-toggle="modal" data-target="#infomodal{{@index}}">Datos</button>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    {{> infowin}}
                </div>
            </div>
        </div>
    </div>

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    {{> infowin}}
    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="/chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="js/demo/chart-area-demo.js"></script>
    <script src="js/demo/chart-pie-demo.js"></script>

</body>