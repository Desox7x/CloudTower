<title>Perfil</title>

<!-- Custom fonts for this template-->
<link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link rel="stylesheet" href="/css/profile.css">
<link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

<!-- Custom styles for this template-->
<link href="/css/sb-admin-2.min.css" rel="stylesheet">


<style>
    .card-title,
    .card-text {

        background-color: rgba(0, 0, 0, 0.5);
        color: white;


    }
</style>

<body id="page-top">


    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav sidebar sidebar-dark accordion" id="accordionSidebar" style="background-color: #50aafe;">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center text-white"
                href="/user/{{inmo.idEntidad}}">
                <div>
                    <img class="img-profile rounded-circle" src="/uploads/{{ inmo.idImg }}" width="50" height="50">
                </div>
                <div class="sidebar-brand-text mx-3">{{inmo.fullname}} </div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Interfaz
            </div>

            <!-- Nav Item - Pages Collapse Menu -->


            <!-- Nav Item - Charts -->
            <li class="nav-item">
                <a class="nav-link" href="/search">
                    <i class="fas fa-search"></i>
                    <span>Buscador</span></a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/legalDocs">
                    <i class="fas fa-file-signature"></i>
                    <span>Documentos legales</span></a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/dashboardin">
                    <i class="fas fa-chart-area"></i>
                    <span>Volver al tablero</span></a>
            </li>

            

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"><i class="fas fa-arrows-alt-h"
                        style="color: rgba(253, 253, 253, 0.7);"></i></button>
            </div>

        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div class="p-4" id="content">

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <div class="row">
                        <div class="col-sm-8">
                            <div class="card text-center">
                                <div class="card-header">
                                    <img src="/img/{{inmo.img}}" alt="" class="card-img-top"
                                        style=".card-img-top {width: 100%; height: 15vw; object-fit: cover;}">

                                </div>
                            </div>
                        </div>


                        <div class="col-md-4 ml-auto">
                            {{> message}}
                            {{#each repre}}
                            <div class="profile-card py-3 card text-center">

                                <div class="card-body py-4">
                                    <img class="profile-picture rounded-circle" src="/uploads/{{idImg}}" />
                                    <h2 class="text-dark h5 font-weight-bold mt-4 mb-1">
                                        {{fullname}}
                                    </h2>
                                    <p class="text-muted font-weight-bold small">
                                        <i class="fa fa-map-marker"></i>
                                        {{direccion}}
                                    </p>
                                    <p class="text-muted font-weight-bold small">
                                        <i class="fas fa-mobile-alt"></i>
                                        {{telefono}}
                                    </p>
                                    <p class="px-1 mt-4 mb-4 text-muted quote-text">
                                        Contrary to popular belief, Lorem Ipsum is not simply random text. It has
                                        roots in a piece of classical Latin literature.
                                    </p>
                                    <form action="/user/{{idEntidad}}">
                                        <button class="btn btn-sm btn-outline-success">Ver perfil</button>
                                    </form>
                                    <div class="d-flex social-section justify-content-center">
                                        <a href=""><i class="fab fa-facebook-f"></i></a>
                                        <a href=""><i class="fab fa-twitter"></i></a>
                                        <a href=""><i class="fab fa-linkedin-in"></i></a>
                                        <a href=""><i class="fab fa-instagram"></i></a>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                            <br>

                            <div class="text-center" data-toggle="modal" data-target="#reservaModal{{@index}}">
                                <button class="btn btn-info">
                                    Reservar
                                </button>
                            </div>
                            {{> reservaWin}}
                            <script>
                                var date = document.getElementById('fecha');
                                date.addEventListener('change', function () {
                                    var d = new Date();
                                    //console.log(d);
                                    var nd = new Date(this.value);

                                    if (new Date(this.value).getTime() <= d.getTime()) {
                                        console.log("Error, Date must be greater than today");
                                    }
                                    else {
                                        console.log("success")
                                    }
                                })
                            </script>

                        </div>




                    </div>
                    <br>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card text-justified">
                                <div class="card-header">
                                    Descripción
                                </div>
                                <div class="card-body">
                                    <p>{{inmo.descr}}</p>

                                </div>
                            </div>

                        </div>
                        <div class="col-md-7">
                            <div class="card text-justified">
                                <div class="card-header">
                                    <h3>Información de {{inmo.nombre}}</h3>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-5">
                                            <p><b>Localizacion:</b> {{inmo.ubic}}</p>
                                        </div>
                                        <div class="col-5">
                                            <p><b>Municipio:</b> {{inmo.municipio}}</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5">
                                            <ul>
                                                <li>
                                                    <p>Construcción: {{inmo.metro}} mt²</p>
                                                </li>
                                                <li>
                                                    <p>Habitaciones: {{inmo.hab}}</p>
                                                </li>
                                                <li>
                                                    <p>Baños: {{inmo.bano}}</p>
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="col-md-5">
                                            <ul>
                                                <li>
                                                    <p>Tipo: {{inmo.tipoInm}}</p>
                                                </li>
                                                <li>
                                                    <p>{{inmo.compra}}: {{inmo.precio}}${{inmo.moneda}}</p>
                                                </li>
                                                <li>
                                                    <p>Parqueo/Garage: {{inmo.parqueo}}</p>
                                                    </i>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                    <br>
                    <div class="row">

                    </div>
                    <br>
                    {{#if expressFlash }}
                    {{expressFlash}}
                    {{/if}}

                </div>
            </div>
        </div>

        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>

        {{> infowin}}
        <!-- Bootstrap core JavaScript-->
        <script src="vendor/jquery/jquery.min.js"></script>
        <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="js/sb-admin-2.min.js"></script>

        <!-- Page level plugins -->
        <script src="/chart.min.js"></script>

        <!-- Page level custom scripts -->
        <script src="js/demo/chart-area-demo.js"></script>
        <script src="js/demo/chart-pie-demo.js"></script>

</body>