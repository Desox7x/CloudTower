<style>
    .container{
        width: 3000px;
        padding-top: 20px;
    }

    .botones{
        text-align: center;
        padding-top: 10px;
    }

    .button{
        background-color: #6495ed;
        border:none;
        border-radius: 4px;
        color: #FFF;
        width: 200px;
        height: 50px;
        padding: 15px 25px;
        font-size: 16px;
        cursor: pointer;
        display: inline-block;
    }

    .button:hover{
        background-color: #4682b4;
    }

    h2, label{
        font-family: "Book Antiqua";
    }

</style>

<body>
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col">
                <h2>Rellene los campos:</h2>
                <form class="needs-validation" novalidate>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="dir">Dirección</label>
                            <input type="text" class="form-control" id="dir" placeholder="Av. Lope de Vega" required>
                            <div class="invalid-feedback">Digite una dirección valida</div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="realtyType">Tipo de inmueble</label>
                            <select name="realtyType" id="realtyType" class="custom-select" required>
                                <option value="">Escoja...</option>
                                <option value="1">Casa</option>
                                <option value="2">Villa</option>
                                <option value="3">Solar</option>
                                <option value="4">Finca</option>
                                <option value="5">Nave</option>
                                <option value="6">Local comercial</option>
                                <option value="7">Edificio</option>
                                <option value="8">Apartamento</option>
                                <option value="9">Penthouse</option>
                                <option value="10">Local de oficina</option>
                            </select>
                            <div class="invalid-feedback">Escoja una opción valida</div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label for="date">Fecha</label>
                            <input type="date" class="form-control" id="date" name="date" required="">
                            <div class="invalid-feedback">Digite una fecha valida</div>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="price">Precio</label>
                            <input type="number" class="form-control" id="price" name="price" required="">
                            <div class="invalid-feedback">Digite un precio valido</div>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="currency">Moneda utilizada</label>
                            <select name="currency" id="currency" class="custom-select" required>
                                <option value="">Escoja...</option>
                                <option value="1">USD</option>
                                <option value="2">DOP</option>
                            </select>
                            <div class="invalid-feedback">Escoja una opción valida</div>
                        </div>
                    </div>
                    <h2>Información de los involucrados:</h2>
                    <div class="row">
                        <div class="col-5">
                            <div class="form-group col-md-8">
                                <input type="text" id="nameC" class="form-control" required="" placeholder="Nombre del cliente">
                                <div class="invalid-feedback">Digite un nombre valido</div>
                            </div>
                            <div class="form-group col-md-8">
                                <input type="email" id="emailC" class="form-control" required="" placeholder="Correo del cliente" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$">
                                <div class="invalid-feedback">Digite un correo valido</div>
                            </div>
                            <div class="form-group col-md-8">
                                <input type="text" id="telC" class="form-control" required="" placeholder="Número del cliente" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}">
                                <div class="invalid-feedback">Digite un número valido</div>
                            </div>
                        </div>
                        <div class="col-7">
                            <div class="form-group col-md-8">
                                <input type="text" id="nameR" class="form-control" required="" placeholder="Nombre del representante">
                                <div class="invalid-feedback">Digite un nombre valido</div>
                            </div>
                            <div class="form-group col-md-8">
                                <input type="email" id="emailR" class="form-control" required="" placeholder="Correo del representante" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$">
                                <div class="invalid-feedback">Digite un correo valido</div>
                            </div>
                            <div class="form-group col-md-8">
                                <input type="text" id="telR" class="form-control" required="" placeholder="Número del representante" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}">
                                <div class="invalid-feedback">Digite un número valido</div>
                            </div>
                        </div>
                    </div>
                    <div class="botones">
                        <button id="submit" name="submit" class="button" type="submit">Guardar</button>
                        <button id="reset" name="reset" class="button" type="reset">Reset</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function() {
        'use strict';
        window.addEventListener('load', function() {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('needs-validation');
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function(form) {
            form.addEventListener('submit', function(event) {
                if (form.checkValidity() === false) {
                event.preventDefault();
                event.stopPropagation();
                }
                form.classList.add('was-validated');
                alert("Los datos fueron registrados");
            }, false);
            });
        }, false);
    })();
</script>