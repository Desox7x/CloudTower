<title>Perfil</title>

<!-- Custom fonts for this template-->
<link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

<!-- Custom styles for this template-->
<link href="/css/sb-admin-2.min.css" rel="stylesheet">

<style>
    .card-title,
    .card-text {

        background-color: rgba(0, 0, 0, 0.5);
        color: white;


    }
</style>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-secondary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center text-white">
                <div>
                    <img class="img-profile rounded-circle" src="/uploads/{{ inmo.idImg }}" width="50" height="50">
                </div>
                <div class="sidebar-brand-text mx-3">{{inmo.fullname}} </div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" href="/user/{{inmo.idEntidad}}">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Perfil de {{inmo.fullname}}</span></a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Interface
            </div>

            <!-- Nav Item - Pages Collapse Menu -->


            <!-- Nav Item - Charts -->
            <li class="nav-item">
                <a class="nav-link" href="/search">
                    <i class="fas fa-search"></i>
                    <span>Buscador</span></a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/dashboardin">
                    <i class="fas fa-chart-area"></i>
                    <span>Dashboard</span></a>
            </li>


            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->


        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div class="p-4" id="content">

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <div class="row">
                        <div class="col-md-4">
                            <div class="card text-center">
                                <div class="card-header">
                                    <img src="/img/{{inmo.img}}" alt="" class="img-thumbnail">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="card text-justified">
                                <div class="card-header">
                                    <h3>Informacion de {{inmo.nombre}}</h3>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <h5>Localizacion: {{inmo.ubic}}</h5>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5">
                                            <ul>
                                                <li>
                                                    <h5>Construccion: {{inmo.metro}} mtÂ²</h5>
                                                </li>
                                                <li>
                                                    <h5>Habitaciones: {{inmo.hab}}</h5>
                                                </li>
                                                <li>
                                                    <h5>Banos: {{inmo.bano}}</h5>
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="col-md-5">
                                            <ul>
                                                <li>
                                                    <h5>Tipo: {{inmo.tipoInm}}</h5>
                                                </li>
                                                <li>
                                                    <h5>{{inmo.compra}}: {{inmo.precio}}${{inmo.moneda}}</h5>
                                                </li>
                                                <li>
                                                    <h5>Parqueo/Garage: {{inmo.parqueo}}</h5>
                                                    </i>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                    <br>
                    <div class="row">
                        <div class="card text-justified">
                            <div class="card-header">
                                Descripcion
                            </div>
                            <div class="card-body">
                                <p>{{inmo.descr}}</p>
                            </div>
                        </div>

                    </div>
                    <br>
                    <form action="/reservar/{{inmo.idInm}}/add" method="post">
                        <input type="date" name="fecha">
                        <input type="time" name="tiempo">
                        <input type="text" value="{{inmo.ubic}}" disabled>
                        {{!-- <input type="text" > --}}
                        <button type="submit">Reservar</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>

        {{> infowin}}
        <!-- Bootstrap core JavaScript-->
        <script src="vendor/jquery/jquery.min.js"></script>
        <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="js/sb-admin-2.min.js"></script>

        <!-- Page level plugins -->
        <script src="/chart.min.js"></script>

        <!-- Page level custom scripts -->
        <script src="js/demo/chart-area-demo.js"></script>
        <script src="js/demo/chart-pie-demo.js"></script>

</body>
