<title>Perfil</title>

<!-- Custom fonts for this template-->
<link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

<!-- Custom styles for this template-->
<link href="/css/sb-admin-2.min.css" rel="stylesheet">

<style>
    .card-title,
    .card-text {

        background-color: rgba(0, 0, 0, 0.5);
        color: white;


    }
</style>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav sidebar sidebar-dark accordion" style="background-color: #50aafe;" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center text-white nav-link"
                href="/profile">
                <div>
                    <img class="img-profile rounded-circle" src="/uploads/{{ user.idImg }}" width="50" height="50">
                </div>
                <div class="sidebar-brand-text mx-3">{{user.fullname}} </div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Interfaz
            </div>

            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link" href="/profile/propertylist" aria-labelledby="true">
                    <i class="fas fa-th-list"></i>
                    <span>Lista de inmuebles</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/profile/reunionlist" aria-labelledby="true">
                    <i class="fas fa-calendar-check"></i>
                    <span>Citas pendientes</span>
                </a>
            </li>

            <!-- Nav Item - Charts -->
            <li class="nav-item">
                <a class="nav-link" href="/search">
                    <i class="fas fa-search"></i>
                    <span>Buscador</span></a>
            </li>

            <!-- Nav Item - Tables -->
            <li class="nav-item">
                <a class="nav-link" href="/contract">
                    <i class="fas fa-file-signature"></i>
                    <span>Llenar contrato</span></a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/profile/representantes">
                    <i class="fas fa-user-tie"></i>
                    <span>Representantes</span></a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/profile/reservas">
                    <i class="far fa-bookmark"></i>
                    <span>Mis reservas</span></a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/dashboard">
                    <i class="fas fa-chart-area"></i>
                    <span>Tablero</span></a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="modal" data-target="#modalImage"
                    aria-expanded="true" aria-controls="modalImage">
                    <i class="fas fa-file-image"></i>
                    <span>Cambiar imagen</span>
                </a>
            </li>
            {{> editImg}}
            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"><i class="fas fa-arrows-alt-h"
                        style="color: rgba(253, 253, 253, 0.7);"></i></button>
            </div>


        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div class="p-4" id="content">

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    {{> message}}
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <button type="button" class="btn btn-sm btn-primary shadow-sm" data-toggle="modal"
                            style="background-color: #1bb2fe; border-color: #1eb2fc;" data-target="#Representante"><i
                                class="fas fa-download fa-sm text-white-50"></i> Añadir
                            Representante</button>
                        <button type="button" class="btn btn-sm btn-primary shadow-sm"
                            style="background-color: #1bb2fe; border-color: #1eb2fc;" data-toggle="modal"
                            data-target="#newProyect"><i class="fas fa-download fa-sm text-white-50"></i> Nuevo
                            Proyecto</button>
                        <button type="button" class="btn btn-sm btn-primary shadow-sm" data-toggle="modal"
                            style="background-color: #1bb2fe; border-color: #1eb2fc;" data-target="#EditProfileModal"><i
                                class="fas fa-download fa-sm text-white-50"></i> Editar perfil</button>
                    </div>
                    {{> addproperty}}
                    {{> addrepre}}

                </div>
                <h4>Citas pendientes</h4>
                <hr class="sidebar-divider">
                {{#if reunion}}
                {{#each reunion}}
                <div class="row justify-content-center">
                    <div class="col-md-4">
                        <img src="/img/{{img}}" class="img-thumbnail float-left mr-2"
                            style="width: 10rem; margin-bottom: 8px;">
                        <b>
                            <p>{{nombre}}</p>
                        </b>
                        <p>Hora: {{tiempo}}</p>
                        <p>Fecha: {{fecha}}</p>



                    </div>

                    <div class="col-md-3">
                        <b>
                            <p><i class="fas fa-map-marker"></i> {{ubic}}, {{municipio}}</p>
                        </b>
                        <p>Id de Reserva: {{id}}</p>
                        <p>Empresa: {{fullname}}</p>

                    </div>

                    <div class="col-md-2">
                        <b>
                            <p>{{moneda}}${{precio}}</p>
                        </b>
                        <a href="/inmueble/{{idInm}}" class="btn btn-info">Detalles <i
                                class="fas fa-chevron-right"></i></a>
                    </div>
                    <div class="col-sm-2">
                        <a href="/borrar/{{id}}" class="btn btn-xs btn-danger">Cancelar reunión</a>
                    </div>

                </div>
                {{/each}}
                {{else}}
                {{#unless noReservas}}
                <div class="text-center">
                    <p>Actualmente usted no posee reservas para ningún inmueble</p>
                </div>

                {{/unless}}
                {{/if}}
            </div>
        </div>
    </div>



    <link rel="stylesheet" href="/css/tel.css">
    <div class="modal fade" id="EditProfileModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header text-white" style="background-color: #1bb2fe;">
                    <h5 class="modal-title" id="exampleModalLongTitle">Edita tu información</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-dark">
                    <form action="/updateuser" method="POST">
                        <div class="form-group">
                            <h5>Nombre</h5>
                            <input type="text" name="fullname" value="{{user.fullname}}" placeholder="Nombre completo"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <h5>Descripcion</h5>
                            <textarea id="mytextarea" name="descripcion" class="form-control" rows="4"
                                placeholder="Objetivos, misión, valores...">{{user.descripcion}}</textarea>
                        </div>
                        <div class="form-group">
                            <h5>Dirección</h5>
                            <input type="text" name="direccion" value="{{user.direccion}}" placeholder="Direccion"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <h5>Teléfono</h5>
                            <input type="tel" name="telefono" value="{{user.telefono}}" placeholder="Número de Telefono"
                                class="form-control" required pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}">
                            <span class="note"> Formato: XXX-XXX-XXXX </span>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary"
                                style="background-color: #1bb2fe; border-color: #1eb2fc;">Editar
                                info</button>

                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <script>
        (function ($) {
            "use strict"; // Start of use strict

            // Toggle the side navigation
            $("#sidebarToggle, #sidebarToggleTop").on('click', function (e) {
                $("body").toggleClass("sidebar-toggled");
                $(".sidebar").toggleClass("toggled");
                if ($(".sidebar").hasClass("toggled")) {
                    $('.sidebar .collapse').collapse('hide');
                };
            });

            // Close any open menu accordions when window is resized below 768px
            $(window).resize(function () {
                if ($(window).width() < 768) {
                    $('.sidebar .collapse').collapse('hide');
                };
            });

            // Prevent the content wrapper from scrolling when the fixed side navigation hovered over
            $('body.fixed-nav .sidebar').on('mousewheel DOMMouseScroll wheel', function (e) {
                if ($(window).width() > 768) {
                    var e0 = e.originalEvent,
                        delta = e0.wheelDelta || -e0.detail;
                    this.scrollTop += (delta < 0 ? 1 : -1) * 30;
                    e.preventDefault();
                }
            });

            // Scroll to top button appear
            $(document).on('scroll', function () {
                var scrollDistance = $(this).scrollTop();
                if (scrollDistance > 100) {
                    $('.scroll-to-top').fadeIn();
                } else {
                    $('.scroll-to-top').fadeOut();
                }
            });

            // Smooth scrolling using jQuery easing
            $(document).on('click', 'a.scroll-to-top', function (e) {
                var $anchor = $(this);
                $('html, body').stop().animate({
                    scrollTop: ($($anchor.attr('href')).offset().top)
                }, 1000, 'easeInOutExpo');
                e.preventDefault();
            });

        })(jQuery); // End of use strict
    </script>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="/chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="js/demo/chart-area-demo.js"></script>
    <script src="js/demo/chart-pie-demo.js"></script>

</body>